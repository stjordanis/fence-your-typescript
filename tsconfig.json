{
    "compilerOptions": {
      "target":                       "ES5",
      "strict":                       true,
      "importHelpers":                true,
      "moduleResolution":             "Node",
      "resolveJsonModule":            true,
      "experimentalDecorators":       true,
      "esModuleInterop":              true,
      "allowSyntheticDefaultImports": true,
      "sourceMap":                    true,
      "baseUrl":                      "./packages",
      "paths":                        {
        "hello": [
          "hello/*",
          "hello/lib/*",
          "hello/lib/index.ts"
        ]
      },
      "lib":                          [
        "esnext",
        "dom",
        "dom.iterable",
        "scripthost"
      ],
      "outDir": "dist",
    },
    "include":         [
      "packages/**/*.ts",
    ],
    "exclude":         [
      "node_modules"
    ]
  }
